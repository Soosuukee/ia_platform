# Sécurité pour le dossier uploads
# Empêcher l'exécution de fichiers PHP
<Files "*.php">
    Order Allow,Deny
    Deny from all
</Files>

# Empêcher l'exécution de fichiers exécutables
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Autoriser seulement les images et documents
<FilesMatch "\.(jpg|jpeg|png|gif|webp|avif|svg|pdf|doc|docx|xls|xlsx|txt)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Désactiver l'affichage du contenu des dossiers
Options -Indexes

# Headers de sécurité
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>
